<form asp-method="post" asp-action="RegistrationResult">
    <h2>Welcome to the Member Registration Page!</h2>
    <p>First Name:</p>
    <input type="text" name="FirstName" />

    <p>Last Name:</p>
    <input type="text" name="LastName" />

    <p>Email: </p>
    <input type="email" name="Email" />
    <br />
    <p>Password: </p>
    <p>Requirments:</p>
    <ul>
        <li>At least 8 charaters in length.</li>
        <li>Must include 1 number and 1 special character.</li>
    </ul>
    <input type="password" name="Password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@@$!%*?&])[A-Za-z\d@@$!%*?&]{8,}$" />

    <input type="submit" />
</form>